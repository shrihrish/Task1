<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="act" class="com.stackroute.domain.Actor">

        <property name="name" value="Abhinandan"></property>
        <property name="gender" value="M"></property>
        <property name="age" value="43"></property>
    </bean>

    <bean id="movie" class="com.stackroute.domain.Movie">

        <property name="actor" ref="act"></property>
    </bean>

</beans>